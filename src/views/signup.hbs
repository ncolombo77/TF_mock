<div class="loginBox">
    <h1>Regístrese en nuestro sitio</h1>
    {{#if error}}
        <p style="color: red">{{error}}</p>
    {{/if}}


    <form class="loginForm" method="post" action="/api/sessions/signup">
        <input type="text" placeholder="Nombre" name="first_name">
        <br /><br />
        <input type="text" placeholder="Apellido" name="last_name">
        <br /><br />
        <input type="text" placeholder="Edad" name="age">
        <br /><br />
        <input type="email" placeholder="Correo electrónico" name="email">
        <br /><br />
        <input type="password" placeholder="Contraseña" name="password">
        <br /><br /><br /><br />
        <button class="botonLogin">Registrarse</button>
    </form>
</div>
